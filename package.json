{
  "private": true,
  "license": "MIT",
  "packageManager": "yarn@3.2.0",
  "workspaces": [
    "example/*",
    "dev/*",
    "src"
  ],
  "devDependencies": {
    "@dev/eslint": "1.0.0"
  },
  "scripts": {
    "dev": "yarn workspace @example/app dev",
    "lint": "cross-env ESLINT_USE_FLAT_CONFIG=true yarn eslint src -c src/eslint.config.js",
    "debug": "yarn workspace @example/app debug",
    "serve": "yarn workspace @example/app http-server ./dist",
    "start": "yarn dev && yarn serve",
    "build": "yarn tsc --project src --outDir dist"
  }
}
